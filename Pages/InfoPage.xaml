                   Margin="10 0 10 0" />
        <ScrollViewer HorizontalAlignment="Left" Height="501" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="1055" 
                     HorizontalScrollBarVisibility="Auto" k:KinectRegion.IsHorizontalRailEnabled="true" k:KinectRegion.IsVerticalRailEnabled="False"
                      k:KinectRegion.ZoomMode="Enabled">
            <Grid Width="1390">
                <Image x:Name="image1" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="191" Source="/hcAssets/img1.png"/>
