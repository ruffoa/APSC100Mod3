<UserControl x:Class="Microsoft.Samples.Kinect.ControlsBasics.InfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:k="http://schemas.microsoft.com/kinect/2014"
      mc:Ignorable="d" Height="300" Width="300"
	  >

    <Grid Margin="0,0,10,0" >
        <Grid.Background>
            <SolidColorBrush Color="White" Opacity="0.4"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Page title -->
        <TextBlock x:Name="pageTitle" Grid.Column="1" Text="Museum Info Test Page" 
                   Margin="10 0 10 0" />
        <ScrollViewer HorizontalAlignment="Left" Height="248" Margin="10,10,0,0" Grid.Row="1" VerticalAlignment="Top" Width="280" 
                     HorizontalScrollBarVisibility="Auto" k:KinectRegion.IsHorizontalRailEnabled="true" k:KinectRegion.IsVerticalRailEnabled="False"
                      k:KinectRegion.ZoomMode="Disabled">
            <Grid Width="1390">
                <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="73" Margin="10,165,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="208"><Run Text="Supporting"/><Run Text=" Text Goes Here"/></TextBlock>
                <Image x:Name="image" HorizontalAlignment="Left" Height="150" Margin="237,10,0,0" VerticalAlignment="Top" Width="209" Source="/ControlsBasics-WPF;component/Assets/EngSoc.png"/>
